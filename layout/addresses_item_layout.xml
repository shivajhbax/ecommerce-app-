<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginBottom="8dp"
                                                   android:foreground="?attr/selectableItemBackground"

                                                   android:layout_marginTop="8dp"
                                                   android:elevation="3dp"
                                                   android:background="@color/colorAccent">

    <TextView
            android:text="Fullname"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/name"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/icon_view" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="address"
            android:textColor="@color/black"

            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/address"
            app:layout_constraintTop_toBottomOf="@+id/name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Pincode"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pincode"
            app:layout_constraintTop_toBottomOf="@+id/address" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:paddingTop="6dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/check"
            android:id="@+id/icon_view" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:paddingEnd="16dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:elevation="3dp"

            android:background="@color/grey"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
            android:visibility="gone" android:id="@+id/option_container">
        <TextView
                android:text="Edit address"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textAlignment="viewStart"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView26" android:textColor="@color/black"
        />

        <TextView
                android:text="Remove address"
                android:textAlignment="center"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingEnd="16dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView27" android:textColor="@color/black"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>