<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".OTPverificationActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/sms" android:id="@+id/imageView18"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.120000005"/>
    <TextView
            android:text="Verification code has been sent to +918904427152"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/phone_no"
            app:layout_constraintTop_toBottomOf="@+id/imageView18" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:backgroundTint="@color/colorAccent"
            android:hint="Enter OTP"
            android:maxLength="6"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:ems="10"
            android:id="@+id/otp"
            app:layout_constraintTop_toBottomOf="@+id/phone_no" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Please wait ,it can take 60-120s to receive the verification sms."
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView40"
            app:layout_constraintTop_toBottomOf="@+id/otp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"/>
    <Button
            android:text="Verify"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/btnRed"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/verify_otp"
            app:layout_constraintTop_toBottomOf="@+id/textView40"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>